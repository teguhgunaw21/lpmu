<script>
document.addEventListener('DOMContentLoaded', function() {
	const track = document.querySelector('.testimonial-track') as HTMLElement;
	const slides = document.querySelectorAll('.testimonial-slide');
	const prevBtn = document.querySelector('.carousel-prev');
	const nextBtn = document.querySelector('.carousel-next');
	const dotsContainer = document.querySelector('.dots-container') as HTMLElement;
	
	let currentSlide = 0;
	let slidesToShow = 3; // Desktop default
	let maxSlides = 0;
	let autoplayInterval: number | undefined;
	
	// Responsive slides count
	function updateSlidesToShow() {
		if (window.innerWidth < 640) {
			slidesToShow = 1; // Mobile
		} else if (window.innerWidth < 1024) {
			slidesToShow = 2; // Tablet
		} else {
			slidesToShow = 3; // Desktop
		}
		maxSlides = Math.max(0, slides.length - slidesToShow);
	}
	
	// Generate dots based on max slides
	function generateDots() {
		if (!dotsContainer) return;
		dotsContainer.innerHTML = '';
		
		for (let i = 0; i <= maxSlides; i++) {
			const dot = document.createElement('button');
			dot.className = `carousel-dot w-3 h-3 rounded-full transition-all duration-200 ${i === 0 ? 'bg-emerald-600' : 'bg-slate-300 hover:bg-emerald-400'}`;
			dot.setAttribute('data-slide', i.toString());
			dot.addEventListener('click', () => goToSlide(i));
			dotsContainer.appendChild(dot);
		}
	}
	
	// Update slide position
	function updateSlidePosition() {
		if (!track) return;
		
		const slideWidth = 100 / slidesToShow;
		track.style.transform = `translateX(-${currentSlide * slideWidth}%)`;
		
		// Update dots
		const dots = document.querySelectorAll('.carousel-dot');
		dots.forEach((dot, index) => {
			dot.classList.toggle('bg-emerald-600', index === currentSlide);
			dot.classList.toggle('bg-slate-300', index !== currentSlide);
		});
	}
	
	// Next slide
	function nextSlide() {
		currentSlide = currentSlide >= maxSlides ? 0 : currentSlide + 1;
		updateSlidePosition();
	}
	
	// Previous slide
	function prevSlide() {
		currentSlide = currentSlide <= 0 ? maxSlides : currentSlide - 1;
		updateSlidePosition();
	}
	
	// Go to specific slide
	function goToSlide(slideIndex: number) {
		currentSlide = Math.min(slideIndex, maxSlides);
		updateSlidePosition();
	}
	
	// Event listeners
	prevBtn?.addEventListener('click', prevSlide);
	nextBtn?.addEventListener('click', nextSlide);
	
	// Touch/swipe support
	let startX = 0;
	let isDragging = false;
	
	track?.addEventListener('touchstart', (e: TouchEvent) => {
		startX = e.touches[0].clientX;
		isDragging = true;
	});
	
	track?.addEventListener('touchmove', (e: TouchEvent) => {
		if (!isDragging) return;
		e.preventDefault();
	});
	
	track?.addEventListener('touchend', (e: TouchEvent) => {
		if (!isDragging) return;
		isDragging = false;
		
		const endX = e.changedTouches[0].clientX;
		const diff = startX - endX;
		
		if (Math.abs(diff) > 50) { // Minimum swipe distance
			if (diff > 0) {
				nextSlide();
			} else {
				prevSlide();
			}
		}
	});
	
	// Auto-play
	function startAutoplay() {
		autoplayInterval = window.setInterval(nextSlide, 5000); // 5 seconds
	}
	
	function stopAutoplay() {
		if (autoplayInterval) {
			clearInterval(autoplayInterval);
		}
	}
	
	// Pause autoplay on hover
	const carousel = document.querySelector('.testimonial-carousel');
	carousel?.addEventListener('mouseenter', stopAutoplay);
	carousel?.addEventListener('mouseleave', startAutoplay);
	
	// Initialize
	function init() {
		updateSlidesToShow();
		generateDots();
		updateSlidePosition();
		startAutoplay();
	}
	
	// Handle resize
	window.addEventListener('resize', () => {
		updateSlidesToShow();
		generateDots();
		updateSlidePosition();
	});
	
	// Start
	init();
	
	// Track AddToCart event for Testimoni navigation button
	const testimoniNavButton = document.querySelector('.testimoni-nav-button');
	if (testimoniNavButton) {
		testimoniNavButton.addEventListener('click', function() {
			if (typeof (window as any).fbq !== 'undefined') {
				(window as any).fbq('track', 'AddToCart', {
