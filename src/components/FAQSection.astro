<script>
document.addEventListener('DOMContentLoaded', function() {
	// Simple and reliable event delegation for all registration buttons
	document.addEventListener('click', function(e) {
		const target = e.target as HTMLElement;
		
		// Check if clicked element or its parent has the registration class
		if (target && (target.classList.contains('open-registration-modal') || 
					   target.closest('.open-registration-modal'))) {
			e.preventDefault();
			e.stopPropagation();
			
			console.log('Registration button clicked!');
			
			// Track Meta Pixel event
			if (typeof (window as any).fbq !== 'undefined') {
				(window as any).fbq('track', 'AddToCart', {
					content_name: 'Daftar Gratis Sekarang!',
					content_category: 'Navigation Button - FAQ'
				});
				console.log('Meta Pixel: AddToCart event tracked - FAQ navigation button');
			}
			
			// Open modal
			const modal = document.getElementById('registrationModal');
			if (modal) {
				modal.classList.remove('hidden');
				modal.classList.add('flex');
				
				// Animate modal appearance
				setTimeout(() => {
					const modalContent = modal.querySelector('.modal-content');
					if (modalContent) {
						modalContent.classList.remove('scale-95', 'opacity-0');
						modalContent.classList.add('scale-100', 'opacity-100');
					}
				}, 10);
			}
		}
	});
});
</script>

 
 